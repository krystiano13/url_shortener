---
import {Benefits} from "./Benefits";
import Benefit from './Benefit.astro';
---

<section class="w-full whitesmoke flex flex-col items-center pb-20">
    <h2 class="font-big text-4xl mt-20">Advanced Statistics</h2>
    <p class="mt-5 font-small text-lg max-w-[90%] md:max-w-[30%] text-center">
        Track how your links are performing across the web
        with our advanced statistics dashboard.
    </p>
    <div id="pros" class="w-full h-auto flex flex-col md:flex-row gap-6 justify-center items-center mt-32">
        {
            Benefits.map(item => (
                <Benefit img={item.img} alt={item.alt} title={item.title} desc={item.desc} />
            ))
        }
    </div>
</section>

<style>
    .whitesmoke { background-color: whitesmoke; }
    h1 { color: var(--very-dark-violet); }
    p { color: var(--grayish-violet); }
</style>