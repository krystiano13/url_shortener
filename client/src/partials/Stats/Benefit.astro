---
import {Image} from "astro:assets";
const props = Astro.props;
---

<section class="w-[90%] md:w-[25%] bg-white p-6 rounded-xl" id="benefit">
    <div class="rounded-full w-20 h-20 violet-bg p-3 flex justify-center items-center absolute">
        <Image class="w-[65%] h-[65%]" src={props.img} alt={props.alt} />
    </div>
    <h3 class="font-big mt-12 text-xl">{props.title}</h3>
    <p class="font-small mt-3 max-w-[90%] text-base">{props.desc}</p>
</section>

<style>
    .violet-bg { background-color: var(--dark-violet); }
    h3 { color: var(--very-dark-violet); }
    p { color: var(--grayish-violet); }
    div { transform: translateY(-70%); }
</style>